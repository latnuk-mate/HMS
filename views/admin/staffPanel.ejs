
<div class=" d-flex justify-content-start pb-4 pb-lg-3" title="Add a Doctor">
    <a href="/admin/staff/create" class="text-white px-5 py-2 text-decoration-none bg-primary rounded-pill d-flex align-items-center">
      <span class="d-none d-lg-block">Create Staff</span>
    <i class="fa fa-plus ms-lg-1"></i>
 </a>
 </div>

<% if(staffs.length > 0) { %>
        <div class="m-2">
          <div class="w-50 d-block ms-auto border border-secondary p-1 mb-3">
            <form action="/admin/search/query" method="post">
            <div class="d-flex align-items-center gap-2">
                <input type="text" placeholder="type Category to filter or search a name..." 
                   id="queryField" name="query"
                    class="text-secondary form-control  border-none shadow-none"
                   >
            <button class="text-white px-4 py-1 bg-primary rounded btn" type="submit">
                Find
            </button>
            </div> 
            </form>
     
            </div>

        <table class="table table-striped border border-secondary table-primary">
            <thead class="fw-semibold text-center border-end-2 border-secondary">
                    <tr>
                        <th class="col">Category</th>
                        <th class="col">Name</th>
                        <th class="col">Email</th>
                        <th class="col">Phone</th>
                        <th class="col">ShiftTime</th>
                        <th class="col">EmploymentDate</th>
                    </tr> 
            </thead>  
        <% staffs.map(staff => { %>
                <tbody class="text-center">
                    <tr>
                        <td><%= staff.Category %></td>
                        <td><%= staff.Name %></td>
                        <td><%= staff.Email %></td>
                        <td><%= staff.Phone %></td>
                        <td><%= staff.Shift %></td>
                        <td><%= helper.formatDate(staff.EmpDate, "DD-MM-YYYY") %></td>
                    </tr>
                </tbody>
        <% }) %>
            </table>
          </div>
<% } else { %>
    
    <h4 class="text-center mb-5 text-secondary">No Data Avaiable!</h4>
    <div class="d-flex justify-content-center">
        <img src="/imgs/error.png" alt="" class="img-fluid">
      </div>
    
<% } %>
