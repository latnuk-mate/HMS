
<% if(appointments.length > 0) { %>
    <h4 class="text-center text-secondary mb-3">Appointment List</h4>
    <div class="m-2">
    <table class="table table-striped table-primary border border-secondary">
        <thead class="fw-semibold text-center border-end-2 border-secondary">
            <tr>
                <th class="col">PatientName</th>
                <th class="col">Appointment With</th>
                <th class="col">Date</th>
                <th class="col">Time</th>
                <th class="col">Status</th>
                <th class="col">Payment</th>
            </tr> 
    </thead>
    <% appointments.map(app => { %>
        <tbody class="text-center">
            <tr>
                <td><%= app.Appointment_User_Name %></td>
            <td>
                <% doctors.map(doctor => { %> 
                <% if(doctor.id === app.Appointment_User_Chosen_Doctor){ %>
                    <%= doctor.Name %>
            <% }}) %>
           </td>

           
            <td><%= helper.formatDate(app.Appointment_User_Book_Date, "DD-MM-YYYY") %></td>
            <td><%= app.Appointment_User_Book_Time %></td>
            <td><%= app.Appointment_Status %></td>
            <td><%= app.Payment %></td>
            </tr>
        </tbody>    

    <% }) %>

    </table> 
</div>   
<%} else {%>
    <h4 class="text-center text-secondary">No Appointments Avaiable!</h4>
 <% } %>