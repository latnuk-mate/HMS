<%- include('./account') %>

<div class="row align-items-center mb-3">
    <div class="col-lg-6">
        <div class="p-3 text-black patientDashCard">
            <h5 class="text-black-50 mb-2">Welcome!</h5>
            <h5 class="mb-2 fs-2"><%= patient.userName %></h5>
            <p class="pb-2">
            At HealthHub, You will get the best health and future. Wish You Health!.
            </p>
            <div class="mb-2">
                <button 
                    class="px-5 py-2 bg-light text-dark fw-bold border-0"
                    data-bs-toggle="modal" data-bs-target="#Account">
                    View Account
                </button>
            </div>
        </div>
    </div>
    <div class="col-lg-6 d-lg-block d-none">
        <div class="img--box">
            <img src="/imgs/patientDash.png" alt="" class="img-fluid">
        </div>
    </div>
</div>

<div class="row mb-3 g-3">
    <div class="col-lg-6">
        <h5 class="text-secondary mb-3">Status</h5>
        <div class="row gx-2">
          <div class="col-sm-6">
            <div class="card bg-light text-primary">
              <div class="card-body d-flex align-items-center justify-content-between ">
                <div class="card--text">
                  <h5 class="fs-2"><%= doctors.length %></h5>
                  <p class="fs-5 mb-2 text-black-50">All Doctors</p>
                </div>
                <div class="bg-light">
                  <i class="fa fa-user-doctor fs-2"></i>
                </div>
              </div>
            </div> 
          </div>

          <div class="col-sm-6">
            <div class="card bg-light text-primary">
              <div class="card-body d-flex align-items-center justify-content-between ">
                <div class="card--text">
                  <h5 class="fs-2"><%= patients.length %></h5>
                  <p class="fs-5 mb-2 text-black-50">All Patients</p>
                </div>
                <div class="bg-light">
                  <i class="fa fa-wheelchair-move fs-2"></i>
                </div>
              </div>
            </div> 
          </div>

          <div class="col-sm-6">
            <div class="card bg-light text-primary">
              <div class="card-body d-flex align-items-center justify-content-between ">
                <div class="card--text">
                   <h5 class="fs-2"><%= appointments.length %></h5>  
                  <p class="fs-5 mb-2 text-black-50">Appointments</p>
                </div>
                <div class="bg-light">
                  <i class="fa fa-bookmark fs-2"></i>
                </div>
              </div>
            </div> 
          </div>

          <div class="col-sm-6">
            <div class="card bg-light text-primary">
              <div class="card-body d-flex align-items-center justify-content-between ">
                <div class="card--text">
                  <h5 class="fs-2">0</h5>
                  <p class="fs-5 mb-2 text-black-50">Payments</p>
                </div>
                <div class="">
                  <i class="fa fa-credit-card fs-2"></i>
                </div>
              </div>
            </div> 
          </div>

        </div>
      </div>

      <!-- first col -->

      <div class="col-lg-6">
        <h5 class="text-center fs-4 text-secondary mb-2">Schedule Reminder</h5>
        <table class="table table-striped table-hover">
            <thead class="border-0 border-bottom-1 border-primary text-center fw-semibold">
                <tr>
                    <td class="col">Task</td>
                    <td class="col">Date</td>
                    <td class="col">Details</td>
                </tr>
            </thead>
    
            <tbody class="text-center">
                <tr>
                    <td>Appointment</td>
                    <td>07/07/2024</td>
                    <td>
                        <a href="#/patient/<%=patient.id %>/task/view"
                            class="px-3 py-1 bg-primary text-white text-decoration-none rounded"> 
                            view
                        </a>
                    </td>
                </tr>

                <tr>
                    <td>Blood Test</td>
                    <td>09/07/2024</td>
                    <td>
                        <a href="#/patient/<%=patient.id %>/task/view"
                            class="px-3 py-1 bg-primary text-white text-decoration-none rounded"> 
                            view
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
      </div>
</div>